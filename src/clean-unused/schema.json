{
    "$schema": "http://json-schema.org/schema",
    "$id": "clean-unused",
    "title": "clean unused icons",
    "type": "object",
    "description": "Remove unused icons",
    "properties": {
      "output-path": {
        "type": "string",
        "description": "outputPath of the build",
        "default": "www"
      },
      "svg-dir": {
        "type": "string",
        "description": "Relative path of the svg folder from the outputPath",
        "default": "svg"
      },
      "icons": {
        "type": "array",
        "description": "icons in use in the app"
      },
      "force-delete": {
        "type": "boolean",
        "description": "Force delete even if you get dynamic warning",
        "default": false
      },
      "whitelist": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "List of icons that will not delete"
      }
    }
   }